<li id="micropost-<%= micropost.id %>" data-micropost-id="<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <% if current_user?(micropost.user) %>
    <%= link_to "削除", micropost, class: "micropost-delete", method: :delete,
                                     data: { confirm: "削除してもよろしいですか？" } %>
  <% end %>
  <span class="content">
    <!-- ここに詳細ページに飛ぶリンクが付与されている -->
    <%= link_to (micropost_path(micropost)) do %>
      <%= micropost.content %>
      <%= image_tag micropost.picture.url if micropost.picture? %>
    <% end %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  <%= render "likes/like", micropost: micropost %>
</li>
